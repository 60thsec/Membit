<div class="row" xmlns="http://www.w3.org/1999/html">
  <div class="offset3 span6">
    <h1>Change Password</h1>
        <div class="registration-form">
          <%= form_tag nil, :method => :put do |f| %>

              <div class="input controls input-prepend">
                <%= label_tag 'original_password', "Current Password" %>
                <span class="add-on"><i class="icon-lock"></i></span><%= password_field_tag 'original_password' %>
              </div>
              <hr/>

              <div class="input controls input-prepend">
                  <%= label_tag 'password', "New Password" %>
                  <span class="add-on"><i class="icon-lock"></i></span><%= password_field_tag 'password' %>
              </div>

              <div class="input controls input-prepend">
                  <%= label_tag 'password_confirmation', "Confirm New Password" %>
                  <span class="add-on"><i class="icon-lock"></i></span><%= password_field_tag 'password_confirmation' %>
              </div>

              <div class="form-actions">
                <%= submit_tag 'Save', :class => "btn btn-primary" %>
              </div>
          <% end %>
        </div>
  </div>
</div><!--/row-->