<%= render :partial => 'register_info' %>

<div class="row" xmlns="http://www.w3.org/1999/html">
  <div class="offset3 span6">
    <div class="registration-form">
      <%= twitter_bootstrap_form_for @user, :url => {:action => 'create'} do |f| %>
          <%= f.inputs 'Teacher Registration' do %>
            <%= f.text_field :registration_code, 'Registration Code', :add_on => :prepend do %>
                    <span class="add-on"><i class="icon-user"></i></span><% end %>
                <hr/>
              <%= f.password_field :password, 'Password', :add_on => :prepend do %>
                  <span class="add-on"><i class="icon-lock"></i></span><% end %>
              <%= f.password_field :password_confirmation, 'Confirm Password', :add_on => :prepend do %>
                  <span class="add-on"><i class="icon-lock"></i></span><% end %>

              <hr/>

              <%= f.actions do %>
                  <%= f.submit "Register" %>
              <% end %>
          <% end %>
      <% end %>
    </div>
  </div>
</div><!--/row-->