<div class="row" xmlns="http://www.w3.org/1999/html">
  <div class="offset3 span6">
        <div class="registration-form">
          <%= form_tag do |f| %>
            
              <div class="input controls input-prepend">
                <%= label_tag 'email', "Email address you registered with" %>
                <span class="add-on"><i class="icon-envelope"></i></span><%= text_field_tag 'email' %>
              </div>
              <div class="form-actions">
                <%= submit_tag "Reset", :class => "btn btn-primary" %>
              </div>
              <hr/>
          <% end %>
        </div>
  </div>
</div><!--/row-->
